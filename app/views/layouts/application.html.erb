<!DOCTYPE html>
<html>
<head>
  <title>牛题管理</title>
  <meta charset="utf-8" /> 
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=1000, initial-scale=1.0, maximum-scale=1.0">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <!-- HTML5 shim, for IE6-8 support of HTML5 elements. All other JS at the end of file. -->
    <!--[if lt IE 9]>
<%= javascript_include_tag "html5shiv" %>
<%= javascript_include_tag "respond.min" %>
    <![endif]-->
</head>
<body>
<!-- start header -->
<div class="header_bg">
	<div class="wrap">
		<div class="header">
			<div class="logo">
				<a href="/"><img src="/assets/logo.png" alt=""></a>
			</div>
			<div class="h_right">
				<!--start menu -->
				<ul class="menu">
					<li>
						<% if user_signed_in? %>
          		<%= link_to('注销', destroy_user_session_path, :method => :delete) %>
          	<% else %>
          		<%= link_to('管理员登录', new_user_session_path)  %>
          	<% end %>
					</li>
					<div class="clear"></div>
				</ul>
			</div>
			<div class="clear"></div>
		</div>
	</div>
</div>
<!-- end header -->
<!--start main -->
<div class="main_bg">
	<div class="wrap">
		<div class="main">
			<div class="contact">				
				<div class="contact_left">
					<div class="sidebar">
					 	<div class="date_btn">
							<form>
								<input type="submit" value="牛题后台管理" style="width: 82px;">
							</form>
						</div>
						<ul class="s_nav">
							<li>
							<%=link_to "创建题目" , new_question_url, onclick: "location.replace(http://localhost:5000/questions/new);" %></li>
							<li><a href="/questions">已创建题目</a></li>
							<li><a href="/questions/show_questions">模拟做题</a></li>
							<% if user_signed_in? %>
							<li><a href="/users/edit">修改密码</a></li>
							<li><%= link_to('注销', destroy_user_session_path, :method => :delete) %></li>
							<% else %>
							<li><a href="/users/sign_in">管理员登录</a></li>
							<% end %>
						</ul>
					</div>
				</div>				
				<div class="contact_right">
				  <div class="contact-form">
				  	<% if notice %>
    					<div class="alert alert-success">
      					<%= notice  %>
    					</div>
  					<% end %>
  					<% if alert %>
    					<div class="alert alert-warning">
      					<%= alert  %>
    					</div>
  					<% end %>
				    <%= yield %>
				  </div>
  			</div>
  			<div class="clear"></div>		
		  </div>
		</div>
	</div>
</div>
<!--end main -->
<div class="footer_bg">
	<div class="wrap">
		<div class="footer">
			<div class="copy">
				<p class="link"><span>Copyright &copy; 2015.NiuTi All rights reserved.</p>
			</div>
			<div class="clear"></div>
		</div>
	</div>
</div>
</body>
</html>
